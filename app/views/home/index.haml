:css
  body {
    padding-top: 70px;
  }
.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#"} Smilingly.com
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li.active
          %a{href: "#"} Home
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{href: "#about"} About
        %li
          %a{href: "#contact"} Contact
.container
  .jumbotron
    %h1 Love, smilingly.
    %p It doesn't matter who you are, or where you come from. We all deserve to find that special connection with someone. So that we can live life Smilingly.
    %p
      %a.btn.btn-lg.btn-primary{href: "../../components/#navbar", role: "button"} Sign Up

.container
  .table-responsive
    %table.table.table-hover
      %tr
        %th Website
        %th Type
        %th Users
        %th Rating
        %th Visit
      - for provider in @providers
        %tr
          %td= provider.name
          %td= provider.site_type
          %td= provider.users
          %td= provider.rating
          %td= link_to "Visit", provider.url, class: "btn btn-primary"
